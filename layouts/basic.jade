doctype html
html(lang="en")
 head
  meta(charset='utf-8')
  meta(http-equiv='X-UA-Compatible', content='IE=edge')
  meta(name='viewport', content='width=device-width, initial-scale=1')

  title #{title] - My Site
  link(rel='stylesheet', href='/stylesheets/bootstrap/bootstrap.min.css')


 body
   div(class="navbar navbar-default navbar-fixed-top" role="navigation")
     div(class="container")
      div(class="navbar-header")
        button(type="button", class="navbar-toggle", data-toggle="collapse", data-target=".navbar-collapse")
          span(class="sr-only") Toggle Navigation
          span(class="icon-bar")
          span(class="icon-bar")
          span(class="icon-bar")
        a(class="navbar-brand", href="http://slc05akl.us.oracle.com:3000") BugDB
      div(class="navbar-collapse collapse")
        ul(class="nav navbar-nav")
          li(class="active")
            a(href="http://slc05akl.us.oracle.com:3000/tasks") Tasks
          li
            a(href="http://slc05akl.us.oracle.com:3000/posts") Posts
    
   if message && message.length
     div(class="page-header text-center")
       div( class="alert alert-success", role="alert") #{message}
   block main_content
     div(class="container")
       //if message && message.length
       div(class="jumbotron")
         h1 This is sample page
         p This example is a quick exercise to illustrate how the default, static and fixed to top navbar work.

   script(type='text/javascript', src='/javascripts/jquery/1.11.1/jquery.min.js')
   script(type='text/javascript', src='/javascripts/bootstrap/bootstrap.min.js')
   script(type='text/javascript', src='/javascripts/angular/1.3.0-rc.2/angular.min.js')
   block external_javascript
